<!DOCTYPE html>
<html lang="en">
<head>
  <title>FormWizard</title>
  <meta charset="utf-8">
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header class="navbar navbar-default navbar-fixed-top" role="banner">
    <div class="navbar-header">
      <%= link_to "The FormWizard",  new_poll_path(bunch_type_id:1), :class=>"navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class ="nav navbar-nav">
        <li class="<%= 'active' if params[:controller] == "polls" && params[:action] == "new"%>"><%= link_to("POLLS", new_poll_path(bunch_type_id:1)) %></li>
        <li class="<%= 'active' if params[:controller] == "bunch_types"%>"><%= link_to("CHANGE", edit_bunch_type_path(1)) %></li>
        <li class="<%= 'active' if params[:controller] == "polls" && params[:action] == "show"%>"><%= link_to("ANSWERS", poll_path(1)) %></li>
      </ul>
    </div>
  </header>
  <div id="container">
    <div class="bootstrap">
      <div class="navbar">
        <div class="navbar-inner">
          <div class="container">
            <ul class="nav nav-pills">
              <%- if params[:controller] == "bunch_types"%>
                  <li class="<%= 'active' if current_page?(edit_bunch_type_path(1)) %>"><%= link_to("Contact Info", edit_bunch_type_path(1)) %></li>
                  <li class="<%= 'active' if current_page?(edit_bunch_type_path(2)) %>"><%= link_to("Motivation letter", edit_bunch_type_path(2)) %></li>
                  <li class="<%= 'active' if current_page?(edit_bunch_type_path(3)) %>"><%= link_to("Personal Info", edit_bunch_type_path(3)) %></li>
                  <li class="<%= 'active' if current_page?(edit_bunch_type_path(4)) %>"><%= link_to("Job", edit_bunch_type_path(4)) %></li>
                  <li class="<%= 'active' if current_page?(edit_bunch_type_path(5)) %>"><%= link_to("Accounts", edit_bunch_type_path(5)) %></li>
                  <li class="<%= 'active' if current_page?(edit_bunch_type_path(6)) %>"><%= link_to("Extra uploads", edit_bunch_type_path(6)) %></li>
              <%- elsif params[:controller] == "polls" && params[:action] == "new"%>
                  <li class="<%= 'active' if current_page?(new_poll_path(bunch_type_id:1)) %>"><%= link_to("Contact Info", new_poll_path(bunch_type_id:1)) %></li>
                  <li class="<%= 'active' if current_page?(new_poll_path(bunch_type_id:2)) %>"><%= link_to("Motivation letter", new_poll_path(bunch_type_id:2)) %></li>
                  <li class="<%= 'active' if current_page?(new_poll_path(bunch_type_id:3)) %>"><%= link_to("Personal Info", new_poll_path(bunch_type_id:3)) %></li>
                  <li class="<%= 'active' if current_page?(new_poll_path(bunch_type_id:4)) %>"><%= link_to("Job", new_poll_path(bunch_type_id:4)) %></li>
                  <li class="<%= 'active' if current_page?(new_poll_path(bunch_type_id:5)) %>"><%= link_to("Accounts", new_poll_path(bunch_type_id:5)) %></li>
                  <li class="<%= 'active' if current_page?(new_poll_path(bunch_type_id:6)) %>"><%= link_to("Extra uploads", new_poll_path(bunch_type_id:6)) %></li>
              <%- else%>
                  <li class="<%= 'active' if current_page?(poll_path(1)) %>"><%= link_to("Contact Info",  poll_path(1)) %></li>
                  <li class="<%= 'active' if current_page?(poll_path(2)) %>"><%= link_to("Motivation letter", poll_path(2)) %></li>
                  <li class="<%= 'active' if current_page?(poll_path(3)) %>"><%= link_to("Personal Info", poll_path(3)) %></li>
                  <li class="<%= 'active' if current_page?(poll_path(4)) %>"><%= link_to("Job", poll_path(4)) %></li>
                  <li class="<%= 'active' if current_page?(poll_path(5)) %>"><%= link_to("Accounts",  poll_path(5)) %></li>
                  <li class="<%= 'active' if current_page?(poll_path(6)) %>"><%= link_to("Extra uploads",  poll_path(6)) %></li>
              <%- end%>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, id: "flash_#{name}" %>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
